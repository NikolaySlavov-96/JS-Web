<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{gameInfo.image}}" />
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{gameInfo.game}}</h1>
                <h3 id="platform">Platform: {{gameInfo.platform}}</h3>
                <p id="price"><span>Price: ${{gameInfo.price}}</span></p>
                <p id="genre"><span>Genre: {{gameInfo.genge}}</span></p>
                <p id="description">{{gameInfo.description}}</p>
            </div>
            <div class="product-btn">
                {{#if user}}
                    {{#if infoType.isOwner}}
                        <!--Only for registered user and author of the publication -->
                        <div class="author">
                            <a href="/game/edit/{{gameInfo._id}}" class="btn-edit">Edit</a>
                            <a href="/game/delete/{{gameInfo._id}}" class="btn-delete">Delete</a>
                        </div>
                    {{else}}
                        {{#if infoType.isBuy}}
                            <!-- Logged in user who has already buy this game code-->
                            <p class="buy-message">You have already bought this game</p>
                        {{else}}
                            <!-- Logged in user who has not yet buy this game code-->
                            <a href="/game/buy/{{gameInfo._id}}" class="btn-buy">Buy</a>
                        {{/if}}
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>